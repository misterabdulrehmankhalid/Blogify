<main class="flex-grow flex flex-col items-center justify-center bg-gray-50 px-4">

  <div class="w-full max-w-md bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">

    <div class="bg-gray-900 px-8 py-6 text-center">
      <h2 class="text-2xl font-bold text-white tracking-wide">Welcome to BLOGIFY App</h2>
      <p class="text-gray-400 text-sm mt-1">Please enter your details to sign up</p>
    </div>

    <div class="p-8">
      <%= form_with url: "#", class: "space-y-6" do |i| %>

        <div>
          <%= i.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= i.email_field :email,
                            class: "block w-full rounded-lg border-gray-300 bg-gray-50 px-4 py-3 text-gray-900 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 outline-none",
                            placeholder: "you@example.com" %>
        </div>

        <div>
          <%= i.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= i.password_field :password,
                               class: "block w-full rounded-lg border-gray-300 bg-gray-50 px-4 py-3 text-gray-900 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 outline-none",
                               placeholder: "••••••••" %>
        </div>

        <div>
          <%= i.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= i.password_field :password_confirmation,
                               class: "block w-full rounded-lg border-gray-300 bg-gray-50 px-4 py-3 text-gray-900 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 outline-none",
                               placeholder: "••••••••" %>
        </div>

        <div class="pt-2">
          <%= i.submit "Sign Up",
                       class: "w-full cursor-pointer rounded-xl bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 px-4 py-3 text-white font-bold shadow-md hover:shadow-lg hover:scale-[1.02] transition-all duration-200" %>
        </div>

      <% end %>
    </div>

    <div class="bg-gray-50 px-8 py-4 border-t border-gray-100 text-center">
      <p class="text-sm text-gray-600">
        Already have an account?
        <%= link_to "Sign in", "/login", class: "font-medium text-indigo-600 hover:text-indigo-500 hover:underline" %>
      </p>
    </div>

  </div>
</main>