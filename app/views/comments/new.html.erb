<h2 class="text-2xl font-bold mt-10">Comments</h2>

<%= form_with model: [@post, Comment.new], local: true do |f| %>

  <div class="mt-3">
    <%= f.text_area :body, placeholder: "Write a comment...", class: "w-full rounded-md border px-3 py-2" %>
  </div>

  <div class="mt-2">
    <%= f.submit "Add Comment", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
  </div>

<% end %>

<div class="mt-5 space-y-4">

  <% @post.comments.each do |comment| %>

    <div class="border rounded-md p-3 bg-gray-50 flex justify-between items-start">

      <div>
        <p class="text-gray-700"><strong><%= comment.user.email %>:</strong> <%= comment.body %></p>
        <p class="text-gray-400 text-xs mt-1"><%= time_ago_in_words(comment.created_at) %> ago</p>
      </div>

      <% if comment.user == current_user %>
        <%= button_to "Delete", [@post, comment], method: :delete, class: "text-red-600 hover:text-red-500" %>
      <% end %>
    </div>

  <% end %>

</div>
