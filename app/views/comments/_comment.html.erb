<div class="border rounded-lg p-4 bg-gray-50 flex justify-between items-start">
  <div>
    <p class="text-gray-800"><strong><%= comment.user.email %>:</strong> <%= comment.body %></p>
    <p class="text-gray-400 text-xs mt-1"><%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>

  <% if comment.user == current_user %>
    <%= button_to "Delete", [comment.post, comment], method: :delete,
      class: "text-red-600 hover:text-red-500 ml-4",
      data: { turbo_confirm: "Are you sure?" } %>
  <% end %>
</div>
