<main class="flex-grow flex flex-col items-center justify-center bg-gray-50 px-4 min-h-screen">

  <div class="w-full max-w-md bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">

    <!-- Header -->
    <div class="bg-gray-900 px-8 py-6 text-center">
      <h2 class="text-2xl font-bold text-white tracking-wide">Change Your Password</h2>
      <p class="text-gray-400 text-sm mt-1">Enter a new password to secure your account</p>
    </div>

    <!-- Password Reset Form -->
    <div class="p-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "space-y-6") do |f| %>

        <%= f.hidden_field :reset_password_token %>

        <% if resource.errors.any? %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
            <h3 class="font-semibold"><%= pluralize(resource.errors.count, "error") %> prevented this form from being saved:</h3>
            <ul class="list-disc list-inside mt-2">
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- New Password -->
        <div>
          <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-400 mb-1">Minimum <%= @minimum_password_length %> characters</p>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                               class: "block w-full rounded-lg border border-gray-300 px-4 py-3 bg-gray-50 text-gray-900 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 outline-none" %>
        </div>

        <!-- Confirm Password -->
        <div>
          <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                               class: "block w-full rounded-lg border border-gray-300 px-4 py-3 bg-gray-50 text-gray-900 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200 outline-none" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Change My Password",
                       class: "w-full cursor-pointer rounded-xl bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 px-4 py-3 text-white font-bold shadow-md hover:shadow-lg hover:scale-[1.02] transition-all duration-200" %>
        </div>

      <% end %>
    </div>

    <!-- Footer -->
    <div class="bg-gray-50 px-8 py-4 border-t border-gray-100 text-center">
      <p class="text-sm text-gray-600">
        Remember your password?
        <%= link_to "Sign in", new_user_session_path, class: "font-medium text-indigo-600 hover:text-indigo-500 hover:underline" %>
      </p>
    </div>

  </div>
</main>
