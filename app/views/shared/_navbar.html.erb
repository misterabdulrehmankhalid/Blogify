<nav class="bg-white shadow-sm border-b border-gray-200 px-6 py-4 flex justify-between items-center">
  <div class="flex items-center space-x-3">
    <%= image_tag "mylogo.png", alt: "Blogify Logo", class: "h-10 w-10 object-contain" %>
    <%= link_to "Blogify", root_path, class: "text-2xl font-bold text-gray-800 hover:text-indigo-600 transition-colors duration-200" %>
  </div>

  <% if user_signed_in? %>

    <div class="relative group">
      <button class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-700 font-bold uppercase hover:bg-gray-300 transition">
        <%= current_user.email[0].upcase %>
      </button>

      <div class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-xl shadow-lg opacity-0 group-hover:opacity-100 invisible group-hover:visible transition-all duration-200 z-50">

        <div class="px-4 py-2 text-gray-800 text-sm border-b border-gray-100">
          <%= current_user.email %>
        </div>

        <div>
          <%= link_to "Logout",
             destroy_user_session_path,
             data: { turbo_method: :delete },
             class: "block px-4 py-2 text-gray-700 hover:bg-gray-100 transition" %>
        </div>

      </div>
    </div>

  <% else %>

    <div>
      <%= link_to "Sign In", new_user_session_path, class: "text-indigo-600 hover:text-indigo-500 font-medium" %>
    </div>

  <% end %>
</nav>
